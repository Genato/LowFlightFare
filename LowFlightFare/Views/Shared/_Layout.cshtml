@using LowFlightFare.Localization

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="notification" class="alert alert-success">
        <span id="notification_text"> </span>
        <button class="close">&times;</button>
    </div>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="dropdown dropdown-extensiom">
                    @Html.ActionLink(HttpUtility.HtmlDecode("&#127962;"), "Index", "Home", new { area = "" }, htmlAttributes: new { @data_toggle = "dropdown", @class = "navbar-brand btn dropdown-toggle house-icon" })
                    <ul class="dropdown-menu dropdown-menu-extension dropdown-menu-extension-home">
                        <li>@Html.ActionLink(Labels.Home, "Index", "Home")</li>
                        <li>@Html.ActionLink(Labels.About, "About", "Home")</li>
                        <li>@Html.ActionLink(Labels.Contact, "Contact", "Home")</li>
                    </ul>
                </div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(Labels.SearchFareFlights, "SearchFlights", "SearchFlights")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink(Labels.UserApplicationSettings, "Settings", "Settings", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <hr />
            <p>&copy; @DateTime.Now.Year - @Labels.SearchFareFlights</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/CustomScripts/SignalR_Client.js"></script>
</body>
</html>
